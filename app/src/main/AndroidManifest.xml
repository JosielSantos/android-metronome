<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.josantos.metronome"
      >
    <uses-permission android:name="android.permission.VIBRATE" />
    <application android:name="com.josantos.metronome.App" android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity
            android:name=".ui.activity.Metronome"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden"
        >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.TapTempo"
            android:label="@string/tapTempo"
            android:configChanges="orientation|screenSize|keyboardHidden"
        />
        <activity
            android:name=".ui.activity.Settings"
            android:label="@string/settings"
            android:configChanges="orientation|screenSize|keyboardHidden"
        />
    </application>
</manifest>
